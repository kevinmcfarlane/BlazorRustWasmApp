@page "/"
@inject IJSRuntime JSRuntime

<PageTitle>Blazor Rust WebAssembly App</PageTitle>

<h1>Blazor Rust WebAssembly App</h1>

<p>@a + @b = @result</p>

@code {
    const int a = 3;
    const int b = 20;
    int result;

    protected override async Task OnInitializedAsync()
    {
        result = await JSRuntime.InvokeAsync<int>("add", a, b);
    }
}